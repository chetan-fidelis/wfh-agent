{
  "name": "wfh-agent-desktop",
  "version": "0.1.0",
  "description": "WFH Agent Desktop (Electron)",
  "main": "main.js",
  "author": "Fidelis Technology Services Pvt. Ltd.",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "pack:win": "npx @electron/packager . \"WFH Agent\" --platform=win32 --arch=x64 --out=dist --overwrite --prune=true --icon=assets/icon.ico --ignore=^dist$ --ignore=^release$ --ignore=monitor_data/shots --ignore=^build$",
    "dist:win": "node scripts/build-win.js"
  },
  "dependencies": {
    "axios": "^1.7.7"
  },
  "devDependencies": {
    "@electron/packager": "^18.3.6",
    "electron-winstaller": "^5.1.0",
    "electron": "^31.3.0"
  },
  "build": {
    "appId": "com.fidelis.wfh.agent",
    "productName": "WFH Agent",
    "directories": {
      "output": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    }
  }
}
